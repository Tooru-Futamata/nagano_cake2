<div class="container">
  <div class="row">
    <h5 class="two-line-heading">会員情報編集</h5>
  </div>

  <%= form_with model: @customer, url: customers_path, local:true do |f| %>
    <div class="row mt-3">
      <div class="col-2"><%= f.label "名前", class:"w-100" %></div>
      <div class="col-1 text-right p-0">(姓)　</div>
      <div class="col-3"><%= f.text_field :last_name, placeholder: "姓", class:"w-100" %></div>
      <div class="col-1 text-right p-0">(名)　</div>
      <div class="col-3"><%= f.text_field :first_name, placeholder: "名", class:"w-100" %></div>
    </div>

    <div class="row mt-3">
      <div class="col-2"><%= f.label "フリガナ", class:"w-100" %></div>
      <div class="col-1 text-right p-0">(セイ)</div>
      <div class="col-3"><%= f.text_field :last_name_kana, placeholder: "セイ", class:"w-100" %></div>
      <div class="col-1 text-right p-0">(メイ)</div>
      <div class="col-3"><%= f.text_field :first_name_kana, placeholder: "メイ", class:"w-100" %></div>
    </div>

    <div class="row mt-3">
      <div class="col-3"><%= f.label "郵便番号(ハイフンなし)", class:"w-100" %></div>
      <div class="col-3"><%= f.text_field :post_code, placeholder: "0000000", class:"w-100"%></div>
    </div>

    <div class="row mt-3">
      <div class="col-3"><%= f.label "住所", class:"w-100" %></div>
      <div class="col-7"><%= f.text_field :address, placeholder: "住所", class:"w-100" %></div>
    </div>

    <div class="row mt-3">
      <div class="col-3"><%= f.label "電話番号(ハイフンなし)", class:"w-100" %></div>
      <div class="col-3"><%= f.text_field :phone_number, placeholder: "00000000000", class:"w-100" %></div>
    </div>

    <div class="row mt-3">
      <div class="col-3"><%= f.label "メールアドレス", class:"w-100" %></div>
      <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"w-100" %></div>
    </div>

    <div class="row mt-4 mb-5">
      <div class="col-3"></div>
      <div class="col-3"><%= f.submit "編集内容を保存", class: "btn btn-success" %></div>
      <div class="col-2 offset-2"><%= link_to "退会する",  unsubscribe_customers_path, class: "btn btn-danger" %></div>
    </div>
  <% end %>
</div>